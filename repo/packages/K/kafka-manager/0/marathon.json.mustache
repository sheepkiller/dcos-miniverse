{
  "id": "{{service.name}}",
  "cpus": {{kafka-manager.cpus}},
  "mem": {{kafka-manager.mem}},
  "instances": {{kafka-manager.instances}},
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{resource.assets.container.docker.kafka-manager-docker}}",
      "forcePullImage": true,
      "network": "BRIDGE",
      "portMappings": [{ "containerPort": 9000, "protocol": "tcp" }]
    }
  },
  "healthChecks": [
    {
      "gracePeriodSeconds": 120,
      "intervalSeconds": 30,
      "maxConsecutiveFailures": 0,
      "path": "/",
      "portIndex": 0,
      "protocol": "HTTP",
      "timeoutSeconds": 5
    }
  ],
  "ports": [],
  "env": {
    "ZK_HOSTS": "{{kafka-manager.zk}}",
    "KM_ARGS": "-Dkafka-manager.base-zk-path=/{{service.name}} -DbasicAuthentication.enabled=true -DbasicAuthentication.realm='{{service.name}}' -DbasicAuthentication.username='{{kafka-manager.username}}' -DbasicAuthentication.password='{{kafka-manager.password}}'"
    {{#kafka-manager.application_secret}},
    "APPLICATION_SECRET": "{{kafka-manager.application_secret}}"
    {{/kafka-manager.application_secret}}
  },
  "labels": {
    "DCOS_SERVICE_NAME": "{{service.name}}",
    "DCOS_SERVICE_SCHEME": "http",
    "DCOS_SERVICE_PORT_INDEX": "0"
  }
}
